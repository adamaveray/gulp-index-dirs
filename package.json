{
  "name": "@averay/gulp-index-dirs",
  "author": "Adam Averay (https://adamaveray.com.au/)",
  "version": "1.0.1",
  "description": "A Gulp plugin to rename non-index files to indices within matching subdirectories.",
  "license": "MIT",
  "homepage": "https://github.com/adamaveray/gulp-index-dirs",
  "repository": {
    "type": "git",
    "url": "https://github.com/adamaveray/gulp-index-dirs.git"
  },
  "type": "module",
  "source": "./src/index.ts",
  "exports": "./dist/index.modern.mjs",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "unpkg": "./dist/index.umd.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "microbundle --target=node --tsconfig=tsconfig.build.json",
    "dev": "microbundle watch --target=node",
    "format": "npm run format:prettier && npm run format:eslint",
    "format:eslint": "eslint --fix .",
    "format:prettier": "prettier --write .",
    "lint": "npm run lint:prettier && npm run lint:eslint && npm run lint:typescript",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint:typescript": "tsc --noEmit",
    "test": "jest",
    "test+coverage": "jest --coverage",
    "prepack": "npm run build",
    "prepare": "husky install"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageDirectory": "coverage",
    "setupFilesAfterEnv": [
      "./test/lib/patch-jest.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run test"
    }
  },
  "devDependencies": {
    "@averay/codeformat": "^0.1.0",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.4.0",
    "@types/vinyl": "^2.0.7",
    "gulp": "^4.0.2",
    "husky": "^8.0.3",
    "jest": "^29.4.1",
    "microbundle": "^0.15.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}
